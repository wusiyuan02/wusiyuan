<!--index.wxml-->
<view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">     有偿互助</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">无偿互助</view>
</view>
<swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
    <swiper-item >
        <view class="textLocation">拿西门外卖</view>
    </swiper-item>
    <swiper-item><view>提现中</view></swiper-item>
</swiper>
